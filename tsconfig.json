{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",          
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,             
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"        // ðŸ‘ˆ picks up your custom .d.ts files
    ]
  },
  "include": ["src", "src/types"],       // ðŸ‘ˆ ensure custom types included
  "exclude": ["node_modules", "dist"]
}
