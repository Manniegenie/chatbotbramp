{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",          // ðŸ‘ˆ more compatible on Vercel than "bundler"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,             // ðŸ‘ˆ ensures CJS interop (useful for some libs)
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
